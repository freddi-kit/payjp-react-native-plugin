{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib/",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "noEmit": false,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}