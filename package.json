{
  "name": "payjp-react-native",
  "description": "A React Native plugin for PAY.JP SDK",
  "version": "0.2.4",
  "author": {
    "name": "PAY.JP",
    "email": "support@pay.jp",
    "url": "https://pay.jp"
  },
  "bugs": {
    "url": "https://github.com/payjp/payjp-react-native-plugin/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@types/jest": "^25.1.0",
    "@types/react": "^16.9.0",
    "@types/react-native": "^0.62.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "husky": "^3.0.4",
    "jest": "^25.1.0",
    "lint-staged": "^9.2.5",
    "metro-react-native-babel-preset": "^0.58.0",
    "prettier": "^1.19.1",
    "react": "16.11.0",
    "react-native": "0.62.1",
    "react-test-renderer": "16.11.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.3.1",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3"
  },
  "directories": {
    "test": "test"
  },
  "files": [
    "lib/src",
    "src",
    "android",
    "ios",
    "payjp-react-native.podspec"
  ],
  "homepage": "https://github.com/payjp/payjp-react-native-plugin",
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/",
      "<rootDir>/example/"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "keywords": [
    "PAY.JP",
    "payment processing",
    "react native"
  ],
  "license": "MIT",
  "main": "lib/src/index.js",
  "peerDependencies": {
    "react": ">= 16.8.6",
    "react-native": ">= 0.60.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payjp/payjp-react-native-plugin.git"
  },
  "resolutions": {
    "minimist": ">= 0.2.1"
  },
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf lib/",
    "dev-sync": "npm run build && cp -r *podspec lib android ios example/node_modules/payjp-react-native/",
    "docs": "typedoc --out docs src/",
    "lint": "eslint --cache \"{src,test}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --cache \"{src,test}/**/*.{ts,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "preversion": "npm test",
    "test": "jest",
    "version": "scripts/sync_version_ios.sh && npm run docs && touch docs/.nojekyll && git add .",
    "watch": "tsc -p . --watch"
  },
  "types": "lib/src/index.d.ts"
}
