{
  "name": "payjp-react-native",
  "version": "0.1.0",
  "private": true,
  "description": "A React Native plugin for PAY.JP SDK",
  "keywords": [
    "PAY.JP",
    "payment processing",
    "react native"
  ],
  "author": {
    "name": "PAY.JP",
    "email": "support@pay.jp",
    "url": "https://pay.jp"
  },
  "homepage": "https://github.com/payjp/payjp-react-native",
  "license": "MIT",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "directories": {
    "test": "__tests__"
  },
  "files": [
    "lib/src",
    "src",
    "android",
    "ios",
    "payjp-react-native.podspec"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payjp/payjp-react-native.git"
  },
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf lib/",
    "watch": "tsc -p . --watch",
    "test": "echo \"Error: run tests from root\" && exit 1",
    "lint": "eslint --cache \"{src,test}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --cache \"{src,test}/**/*.{ts,tsx}\"",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'"
  },
  "bugs": {
    "url": "https://github.com/payjp/payjp-react-native/issues"
  },
  "peerDependencies": {
    "react": "~16.9.0",
    "react-native": "^0.61.5"
  },
  "devDependencies": {
    "@types/react": "~16.9.0",
    "@types/react-native": "^0.61.0",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "ios/Classes/**/*.{h,m}": [
      "clang-format -i -style=Google",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  }
}
